<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/global.css" />
    <link rel="stylesheet" href="/css/add-product.css" />
    <script src="/js/addProduct.js" defer></script>
    <script src="/js/jquery.js"></script>
    <script defer src="js/sidebar.js"></script>
    <title>Sabor do Nordeste</title>
  </head>

  <body>
    <div class="container">
      <nav id="side-nav">
        <div class="profile">
          <img id="profile-picture" src="/assets/avatar.png" alt="" />
          <div class="profile-user">
            <span id="profile-name">Hugo Almeida</span>
            <span id="profile-profession">Caixa</span>
          </div>
        </div>

        <div class="nav-btns">
          <div class="nav-links">
            <a class="nav-link" href="/home">
              <img src="/assets/home.svg" alt="" class="icon" />
              <span>Tela Inicial</span>
            </a>
          </div>
          <div class="nav-actions">
            <a class="nav-link" href="/admin">
              <img src="/assets/admin.svg" alt="" class="icon" />
              <span>Administração</span>
            </a>

            <a class="nav-link" href="/login">
              <img src="/assets/exit.svg" alt="" class="icon" />
              <span>Sair</span>
            </a>
          </div>
        </div>
      </nav>

      <section id="content">
        <header>
          <div id="go-back" onclick="history.back()">Voltar</div>

          <div id="logo">
            <img src="/assets/logo.png" alt="" />
          </div>
        </header>

        <form
          id="new-product-form"
          class="product-info"
          autocomplete="off"
          action="/stock/add"
          method="post"
          enctype="multipart/form-data"
        >
          <div class="product-thumbnail">
            <img
              onclick="$(`#img-input`).click()"
              class="product-thumbnail-image"
              src="/assets/placeholder.png"
              alt=""
              id="product-img"
            />
            <input
              type="file"
              id="img-input"
              accept="image/png, image/jpeg"
              name="image"
              style="display: none"
            />
            <span onclick="$(`#img-input`).click()">
              <img class="edit-thumbnail" src="/assets/edit.svg" alt="" />
            </span>
          </div>

          <div class="product-data">
            <input
              class="product-title"
              id="product-title"
              placeholder="Nome do Produto"
              required
              name="title"
            />

            <div id="selling-details">
              <div class="selling-price selling-detail">
                <span class="selling-detail-title"> Valor </span>
                <input
                  class="selling-detail-value"
                  id="product-price"
                  name="price"
                  type="number"
                  step="0.01"
                  required
                />
                <span>R$</span>
              </div>
              <div class="selling-unit selling-detail">
                <span class="selling-detail-title"> Unidade </span>
                <select
                  class="selling-detail-value"
                  id=""
                  name="format"
                  required
                >
                  <option value="un">Unid.</option>
                  <option value="kg">Kg</option>
                </select>
              </div>
              <div class="selling-price selling-detail" id="category-select">
                <span class="selling-detail-title"> Categoria </span>
                <select class="selling-detail-value" name="category" required>
                  <option value="vegetais">Vegetais</option>
                  <option value="frutas">Frutas</option>
                  <option value="embalados">Embalados</option>
                  <option value="conservados">Conservados</option>
                </select>
              </div>
            </div>

            <button id="add-new" type="submit">
              <div class="add-info">
                <div class="add-title">Confirmar</div>
                <div class="add-desc">
                  Adicione o produto
                  <span class="medium" id="product-name"></span> ao estoque.
                </div>
              </div>
              <img
                class="add-icon next-arrow"
                src="/assets/arrow-next.svg"
                alt=""
              />
            </button>
          </div>
        </form>
      </section>
    </div>
  </body>
</html>
