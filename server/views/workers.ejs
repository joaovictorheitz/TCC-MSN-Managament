<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/global.css" />
    <link rel="stylesheet" href="/css/admin.css" />
    <script src="/js/jquery.js"></script>
    <script defer src="/js/sidebar.js"></script>
    <script defer src="/js/workers.js"></script>
    <script defer src="/js/admin.js"></script>
    <title>Sabor do Nordeste</title>
  </head>

  <body>
    <div class="container">
      <nav id="side-nav">
        <div class="profile">
          <img id="profile-picture" src="/assets/avatar.png" alt="" />
          <div class="profile-user">
            <span id="profile-name">Hugo Almeida</span>
            <span id="profile-profession">Caixa</span>
          </div>
        </div>

        <div class="nav-btns">
          <div class="nav-links">
            <a class="nav-link" href="/home">
              <img src="/assets/home.svg" alt="" class="icon" />
              <span>Tela Inicial</span>
            </a>
          </div>
          <div class="nav-actions">
            <a class="nav-link" href="/admin">
              <img src="/assets/admin.svg" alt="" class="icon" />
              <span>Administração</span>
            </a>

            <a class="nav-link" href="/login">
              <img src="/assets/exit.svg" alt="" class="icon" />
              <span>Sair</span>
            </a>
          </div>
        </div>
      </nav>

      <section id="content">
        <header>
          <div id="go-back">Administração</div>

          <div id="logo">
            <img src="/assets/logo.png" alt="" />
          </div>
        </header>

        <div id="admin">
          <div id="user-info">
            <div class="profile-picture">
              <img src="" id="admin-profile-picture" alt="" />
            </div>
            <div class="profile-data">
              <span class="username"></span>
              <span class="job"></span>
            </div>
          </div>

          <div id="workers">
            <!-- <a class="worker-card" href="/admin/newWorker" id="addWorker">
              <img src="/assets/add.svg" id="newWorker" alt="" />
              <span class="newWorker"> Adicione um novo funcionário </span>
            </a> -->
            <% workers.forEach(worker=> { %>
            <div class="worker-card">
              <img
                src="<%= worker.profile_picture %> "
                alt=""
                class="worker-profile-picture"
              />
              <div class="worker-data">
                <div class="profile-data">
                  <div class="worker-username"><%=worker.name%>,</div>
                  <div class="worker-job"><%=worker.job%></div>
                </div>
                <div class="worker-permissions">
                  <span class="permission-title medium">Permissões</span>
                  <div class="permissions">
                    <div>
                      <input type="checkbox" name="warehouse"
                      data-id="<%=worker._id%>" <%-(worker.permissions.warehouse
                      || worker.permissions.admin)? "checked":""%> id="" />
                      <label for="warehouse">Estoque</label>
                    </div>
                    <div>
                      <input
                        type="checkbox"
                        name="finances"
                        data-id="<%=worker._id%>"
                        checked
                      />
                      <label for="finances">Finanças</label>
                    </div>
                    <div>
                      <input
                        type="checkbox"
                        name="sells"
                        data-id="<%=worker._id%>"
                        checked
                        id=""
                      />
                      <label for="sells">Vendas</label>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </section>
    </div>
  </body>
</html>
